include data
mixin newsPageEmpty
    .page__top.js-animate
        .container.page__group
            .page__group-wrap
                .page__breadcrumbs
                    +breadcrumbs(['Главная', 'Медиа'], 'light')
                h1.page__heading.light.black
                    p
                        span Новости
                        span.animate-title-block
            .page__group-wrap.js-soa.is-scroll-invisible
                .page__tabs
                    ul.nav-tabs
                        each val, index in ['Все новости']
                            li.nav-tabs__item(class=index == 0 ? 'active' : '')
                                a(href="#").tab
                                    span._title=val
                                    span._count (07)


    .page__section
        .container.js-animate
            .js-soa.is-scroll-invisible
                .news.light
                    ._empty
                        p._img
                            img(src="i/logo-dark.svg" alt='Скоро здесь будут новости')
                        p._title Скоро здесь будет больше новостей
                        p._subtitle Обещаем :)

                //--+news({list: newsListNewsPageEmpty, newsClass: "column", slider: false, newsDetail: false}, false)(class="light")
    .page__slider.js-animate
        +ytSlider
    .page__section.black
        .container.js-animate
            .js-soa.is-scroll-invisible
                +insta(instaList)(class="js-soa is-scroll-invisible")
