mixin fractionPagination
    p.custom-slider__fraction-pagination
        span.custom-slider__activeNum
        | /
        span.custom-slider__count

mixin certificateSlider(params)
    .slider.custom-slider.js-custom-gallery-slider(class=params.theme ? 'dark' : 'light')
        if(params.params.isNeedBtn)
            .slider-controls.custom-slider__controls.container
                button(type=button).custom-slider__prev назад
                button(type=button).custom-slider__next вперед
        .container
            .custom-slider__slider-track
                each val in params.list
                    .slider__item
                        .certificate.js-full-size-gallery
                            img(src=val.img alt="сертификат")
            if(params.params.isNeedBullet)
                ul.custom-slider__bullet-list

