mixin _videoSlider(params)
    .custom-slider.slider-video.js-slider-video(class=params.theme ? 'dark' : 'light')
        if(params.params.isNeedBtn)
            .slider-controls.custom-slider__controls.container
                button(type=button).custom-slider__prev назад
                button(type=button).custom-slider__next вперед
        .container
            .slider-video__in
                .custom-slider__slider-track
                    each val in params.list
                        .slider-video__item
                            .slider-video__iframe(data-id=val.videoId)
                                iframe(id=`yt-video-${val.videoId}` width='100%' height='100%' src='https://www.youtube.com/embed/' + val.videoId + '?enablejsapi=1' title='YouTube video player' frameborder='0' allow='accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture' allowfullscreen='')
            if(params.params.isNeedBullet)
                ul.custom-slider__bullet-list
            if(params.params.isNeedFractionPagination)
                +fractionPagination


